      }
		</style>
		<script type="text/javascript">
			function validateStuff() {
				var em=document.getElementById('uname').value;
				var pwd=document.getElementById('pwd').value;
				var repwd=document.getElementById('repwd').value;
				var sel=document.getElementById('seltype').value;
				if(em==null || em=="") {
					alert("Please fill a username");
					return false;
				}
				if(pwd==null || pwd=="" || repwd==null || repwd=="") {
					alert("Please fill passwords");
					return false;
				}
				if(pwd !== repwd) {
					alert("Passwords do not match");
					return false;
				}
				if(sel=="Select" || sel==null || sel=="") {
					alert("Please select an option from the dropdown list");
					return false;
				}
			}
		</script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
