    <div class="container">

      <!-- Main hero unit for a primary marketing message or call to action -->
      <div class="hero-unit">
				<h1>Welcome!</h1>
				<p>Please sign up to continue using Books@TeamMango</p>
			</div>

			<!-- Example row of columns -->
			<div class="row">
        <div class="span6">
					<h2>Please fill in all the fields</h2>
					<form class="navbar-form" onsubmit=validateStuff();>
						<input type="text" id="uname" name="uname" class="span2" placeholder="Enter a username"/>
						</br>
						<input type="password" id="pwd" name="pwd" placeholder="Enter a	password"/> </br>
						<input type="password" id="repwd" placeholder="Retype the password">
						</br>
						<select id="seltype" name="seltype">
							<option>Select</option>
							<option>Reader</option>
							<option>Author</option>
						</select> </br>
					<input type="submit" class="btn btn-primary" value="Sign Up &raquo;"/>
        </div>
			</div>
			</br>

